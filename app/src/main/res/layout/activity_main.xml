<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="220dp"
    android:background="#fff"
    tools:context="com.example.porter.calculator.MainActivity">

    <TextView
        android:id="@+id/textInput"
        android:layout_width="345dp"
        android:layout_height="106dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ff1"
        android:gravity="right"
        android:padding="8dp"
        android:text="Input "
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@+id/textError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSolution" />

    <TextView
        android:id="@+id/textSolution"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#f1f"
        android:gravity="right"
        android:padding="8dp"
        android:text="Solution "
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="346dp"
        android:layout_height="275dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="5"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button7"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="7"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="8"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="9"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_light"
            android:text="+"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_orange_light"
            android:text="-"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="5"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="6"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_bright"
            android:text="*"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_bright"
            android:text="/"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="331dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="2"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="3"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/buttonPow"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_bright"
            android:text="^"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="133dp" />

        <Button
            android:id="@+id/buttonMod"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_bright"
            android:text="%"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="199dp" />

        <Button
            android:id="@+id/buttonRnd"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="RND"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="331dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_green_light"
            android:text="0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="331dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/background_light"
            android:text=""
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/buttonEql"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_purple"
            android:text="="
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="331dp" />

        <Button
            android:id="@+id/buttonClr"
            android:layout_width="53dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@android:color/holo_red_light"
            android:text="CLR"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="331dp" />


    </GridLayout>

    <TextView
        android:id="@+id/textError"
        android:layout_width="347dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="19dp" />

</android.support.constraint.ConstraintLayout>
